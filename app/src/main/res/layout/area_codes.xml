<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:id="@+id/areaa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/area_code_background"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/inalotofwa2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="#000"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="23dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/editText5ssz"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="18dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_weight="1"
                                    android:background="@android:color/transparent"
                                    android:ems="10"
                                    android:enabled="true"
                                    android:fontFamily="@font/carter_one"
                                    android:hint="Add a comment.."
                                    android:inputType="textCapWords|textCapSentences|textAutoComplete|textMultiLine"
                                    android:paddingBottom="4dp"
                                    android:paddingLeft="2dp"
                                    android:paddingTop="4dp"
                                    android:selectAllOnFocus="false"
                                    android:textColor="#505050"
                                    android:textColorHint="#c3c3c3"
                                    android:textSize="17sp"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/hhuuo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/search_background"
                                    android:orientation="horizontal"
                                    android:paddingBottom="7.1dp"
                                    android:paddingTop="7.1dp">

                                    <ImageView
                                        android:id="@+id/imageView8"
                                        android:layout_width="19.5dp"
                                        android:layout_height="19.5dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="1dp"
                                        android:layout_marginLeft="17dp"
                                        android:layout_marginRight="12.5dp"
                                        android:layout_marginTop=".5dp"
                                        android:visibility="visible"
                                        app:srcCompat="@drawable/search_icon" />

                                    <EditText
                                        android:id="@+id/searchcodes"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="2.5dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="13dp"
                                        android:layout_marginTop="1.5dp"
                                        android:layout_weight="1"
                                        android:background="@android:color/transparent"
                                        android:editable="true"
                                        android:ems="10"
                                        android:focusable="true"
                                        android:fontFamily="@font/roboto_medium"
                                        android:gravity="center|left"
                                        android:hint="Search"
                                        android:inputType="textMultiLine|textCapSentences|textAutoComplete"
                                        android:textColor="#1a1a1a"
                                        android:textColorHint="#c6c6c6"
                                        android:textSize="17sp" />

                                    <ImageView
                                        android:id="@+id/imageView12"
                                        android:layout_width="23.7dp"
                                        android:layout_height="23.7dp"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="1.5dp"
                                        android:layout_marginLeft="1dp"
                                        android:layout_marginRight="15dp"
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_marginBottom="4dp"
                                        android:gravity="bottom"
                                        android:orientation="vertical"
                                        android:visibility="gone">

                                        <TextView
                                            android:id="@+id/bladeeff"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="26dp"
                                            android:fontFamily="@font/carter_one"
                                            android:gravity="bottom|left"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:shadowColor="@android:color/black"
                                            android:text="Post"
                                            android:textColor="#82b7f8"
                                            android:textSize="18sp"
                                            android:visibility="gone" />

                                        <TextView
                                            android:id="@+id/bladeeffsscv"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="26dp"
                                            android:fontFamily="@font/carter_one"
                                            android:gravity="bottom|left"
                                            android:paddingLeft="2dp"
                                            android:paddingRight="2dp"
                                            android:shadowColor="@android:color/black"
                                            android:text="Post"
                                            android:textColor="#d4e7ff"
                                            android:textSize="18sp"
                                            android:visibility="visible" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="3dp"
                                    android:gravity="bottom"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:id="@+id/bathrrb"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:padding="1dp"
                                        android:visibility="visible">


                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/fadmsms2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/carter_one"
                android:gravity="center"
                android:paddingRight="2dp"
                android:text="Comments "
                android:textColor="#c4c4c4"
                android:textSize="26sp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listofcodez"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>